


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  ADMIN
  EMPLOYEE
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
