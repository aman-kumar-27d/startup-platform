


generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum ProjectStatus {
  PLANNED
  ACTIVE
  COMPLETED
  ON_HOLD
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum LifecycleStatus {
  LEAD
  ACTIVE
  PAST
  LOST
}

enum ClientWeightage {
  VIP
  REGULAR
  ONE_TIME
  LOW_PRIORITY
}

enum RelationshipLevel {
  WEAK
  WARM
  STRONG
}

enum ClientSource {
  Referral
  Website
  Cold_outreach
  Other
}

enum ClientHistoryActionType {
  CREATED
  STATUS_CHANGED
  WEIGHTAGE_CHANGED
  OWNER_CHANGED
  ARCHIVED
  NOTES_UPDATED
  RISK_MARKED
}

model User {
  id                   String   @id @default(cuid())
  name                 String?
  email                String   @unique
  password             String
  role                 Role     @default(EMPLOYEE)
  isActive             Boolean  @default(true)
  mustChangePassword   Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignedTasks     Task[]      @relation("TaskAssignee")
  createdTasks      Task[]      @relation("TaskCreator")
  createdProjects   Project[]   @relation("ProjectCreator")
  assignedProjects  Project[]   @relation("ProjectAssignee")
  
  ownedClients      Client[]    @relation("ClientOwner")
  clientHistories   ClientHistory[] @relation("HistoryActor")
}

model Task {
  id           String       @id @default(cuid())
  title        String
  description  String
  status       TaskStatus   @default(TODO)
  priority     TaskPriority @default(MEDIUM)
  dueDate      DateTime?

  assignedTo   User         @relation("TaskAssignee", fields: [assignedToId], references: [id])
  assignedToId String

  createdBy    User         @relation("TaskCreator", fields: [createdById], references: [id])
  createdById  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id            String         @id @default(cuid())
  name          String
  description   String?
  status        ProjectStatus  @default(PLANNED)
  isPublic      Boolean        @default(false)

  createdBy     User           @relation("ProjectCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdById   String

  assignedUsers User[]         @relation("ProjectAssignee")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id                String             @id @default(cuid())
  name              String
  companyName       String
  email             String
  phone             String?
  website           String?

  lifecycleStatus   LifecycleStatus    @default(LEAD)
  weightage         ClientWeightage    @default(REGULAR)

  relationshipLevel RelationshipLevel  @default(WEAK)
  leadScore         Int?
  expectedValue     Float?
  isHighRisk        Boolean            @default(false)

  source            ClientSource       @default(Other)
  notes             String?

  owner             User               @relation("ClientOwner", fields: [ownerId], references: [id])
  ownerId           String

  isArchived        Boolean            @default(false)

  clientHistories   ClientHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@index([lifecycleStatus])
  @@index([isArchived])
}

model ClientHistory {
  id            String                     @id @default(cuid())
  client        Client                     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId      String
  actionType    ClientHistoryActionType
  description   String
  actor         User                       @relation("HistoryActor", fields: [actorId], references: [id])
  actorId       String

  createdAt     DateTime                   @default(now())

  @@index([clientId])
  @@index([actorId])
  @@index([createdAt])
}
